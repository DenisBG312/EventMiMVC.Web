@model EventMiWorkshopMVC.Data.Models.Event;

@{
    ViewBag.Title = "Event Details";
}

<link rel="stylesheet" href="~/css/event-details.css" />

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row mx-auto">
    <div class="col-lg-8 col-xl-6">
        <div class="mb-3">
            <p class="font-weight-bold">Event: @Model.Name</p>
            <!-- Removed asp-validation-for as it's typically used with input fields -->
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <p class="form-label font-weight-bold">Start: @Model.StartDate</p>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <p class="form-label font-weight-bold">End: @Model.EndDate</p>
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <p class="form-label font-weight-bold">Place: @Model.Place</p>
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>
        <div class="d-flex flex-row justify-content-around">
            <a asp-controller="Event" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <form asp-controller="Event" asp-action="Delete" asp-route-id="@Model.Id" method="Post" style="display: inline;">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>